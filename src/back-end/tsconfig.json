{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext", // or "node16"
    "baseUrl": "./src",
    "paths": {
      "@user/*": ["modules/user/*"],
      "@portfolio/*": ["modules/portfolio/*"],
      "@project/*": ["modules/project/*"],
      "@competition/*": ["modules/competition/*"],
      "@email/*": ["modules/email/*"],
      "@chat/*": ["modules/chat/*"],
      "@rating/*": ["modules/rating/*"],
      "@projectCompDetails/*": ["modules/projectCompDetails/*"],
      "@favorateProjects/*": ["modules/favorateProjects/*"],
      "@comments/*": ["modules/comments/*"],
      "@postMetrics/*": ["modules/postMetrics/*"],
      "@shared/*": ["shared/*"],
      "@compositionRoot/*": ["compositionRoot/*"],
      "@infrastructure/*": ["infrastructure/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./api/**/*.ts",
    "./src/**/*.ts",
    "./src/infrastructure/types/**/*.d.ts"
  ]
}